	name = "Omega Corporations Archive"
	desc = "A brief history of the company."
	icon_state = "omegacorp"
	author = "Omegacorp"
	title = "Omega Corporations Archive"
	dat = {"<html>
		<head>
		<style>
		h1 {font-size: 18px; margin: 15px 0px 5px;}
		h2 {font-size: 15px; margin: 15px 0px 5px;}
		li {margin: 2px 0px 2px 15px;}
